<configuration>

  <appender name="STDOUT"
    class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{ISO8601} %-5level %logger{36} %X{akkaSource} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="" level="DEBUG" />

  <root level="INFO">
    <appender-ref ref="STDOUT" />
  </root>

</configuration>
